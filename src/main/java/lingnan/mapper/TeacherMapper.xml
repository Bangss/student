<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="lingnan.mapper.TeacherMapper">


    <select id="getById" resultType="Teacher">
        select * from teacher where tea_id = #{teaId}
    </select>
    <select id="getAll" resultType="Teacher">
        select * from teacher
    </select>


    <delete id="deleteById">
        delete from teacher where tea_id = #{teaId}
    </delete>

    <delete id="delete">
        delete from teacher
        <where>
            id
            <!--id in (id1, id2, id3)-->
            <!--先确定好自己的目标sql，再确定由foreach帮你拼接的部分-->
            <foreach collection="list" item="item" open="in(" close=")" separator=",">
                #{item}
            </foreach>
        </where>
    </delete>

    <insert id="insert">
        insert into teacher
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                id,
            </if>
            <if test="password != null">
                password,
            </if>
            <if test="sup != null">
                sup,
            </if>
        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">
                #{id},
            </if>
            <if test="password != null">
                #{password},
            </if>
            <if test="sup != null">
                #{sup},
            </if>
        </trim>
    </insert>
</mapper>
