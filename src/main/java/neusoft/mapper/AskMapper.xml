<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="neusoft.mapper.AskMapper">




    <select id="getByStuId" resultType="Ask">
        select * from ask
        where stu_id = #{stuId}
    </select>

    <!-- 配置resultMap属性，进行表字段与实体类属性映射 -->
    <resultMap id="BaseResultMap" type="neusoft.pojo.Ask" >
        <result column="stu_id" property="stuId"></result>
        <result column="reason" property="reason"></result>
        <result column="sta" property="sta"></result>
    </resultMap>

    <insert id="insert">
        insert into ask
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="stuId != null">
                stu_id,
            </if>
            <if test="reason != null">
                reason,
            </if>

        </trim>
        values
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="stuId != null">
                #{stuId},
            </if>
            <if test="reason != null">
                #{reason},
            </if>

        </trim>
    </insert>

    <update id="updateReason">
        update ask set reason = #{reason} where stu_id = #{stuId}
    </update>
    <update id="updateSta">
        update ask set sta = '${sta}' where stu_id = '${stuId}'
    </update>

    <delete id="delete">
        delete from ask
        <where>
            stu_id
            <!--id in (id1, id2, id3)-->
            <!--先确定好自己的目标sql，再确定由foreach帮你拼接的部分-->
            <foreach collection="list" item="item" open="in(" close=")" separator=",">
                #{item}
            </foreach>
        </where>
    </delete>

    <select id="getAll" resultType="Ask">
        select * from ask;
    </select>
</mapper>
