<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="neusoft.mapper.LoginMapper">


    <select id="login" resultType="Login">
        select * from login
        where id = #{id} and password = #{password}
    </select>
    <select id="getById" resultType="Login">
        select * form login where id = #{id}
    </select>
    <select id="getAll" resultType="Login">
        select * from login
    </select>
    <select id="getSup" resultType="Login">
        select sup form login where id = #{id}
    </select>

    <update id="updatePass">
        update login set password = '${password}' where id = '${id}'

    </update>

    <delete id="deleteById">
        delete from login where id = #{id}
    </delete>

    <delete id="delete">
        delete from login
        <where>
            id
            <!--id in (id1, id2, id3)-->
            <!--先确定好自己的目标sql，再确定由foreach帮你拼接的部分-->
            <foreach collection="list" item="item" open="in(" close=")" separator=",">
                #{item}
            </foreach>
        </where>
    </delete>
</mapper>
